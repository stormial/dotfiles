general {
    output_format = "i3bar"
    colors = true
    interval = 1
}

order += "load"
order += "cpu_temperature 0"
order += "disk /"
order += "wireless _first_"
//order += "ethernet _first_"
order += "battery all"
order += "tztime local"

cpu_temperature 0 {
    format = "%degreesÂ°"
    path = "/sys/class/thermal/thermal_zone0/temp"
}

load {
    format = "cpu %1min"
}

disk "/" {
    format = "df: %avail"
}

wireless _first_ {
    format_up = "wifi"
    format_down = "wifi"
}

ethernet _first_ {
    format_up = "Eth: %ip"
    format_down = "Eth: down"
}

tztime local {
    format = "%Y %b %d %H:%M:%S"
}

